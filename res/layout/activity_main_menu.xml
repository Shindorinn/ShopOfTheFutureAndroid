<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity" >

    <Button
        android:id="@+id/button_mainmenu_logout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_mainmenu_browseshoppinglists"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:onClick="logout"
        android:text="@string/logout" />

    <Button
        android:id="@+id/button_mainmenu_browseshoppinglists"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_mainmenu_logout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:onClick="browseShoppingLists"
        android:text="@string/browse_shopping_lists" />

    <Button
            android:id="@+id/button_mainmenu_api"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_mainmenu_browseshoppinglists"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:onClick="apiMagics"
            android:text="Api" />

</RelativeLayout>