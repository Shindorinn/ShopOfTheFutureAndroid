<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.futureworks.shopofthefuture"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.futureworks.shopofthefuture.activity.MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.futureworks.shopofthefuture.activity.ShoppingActivity"
            android:label="@string/title_activity_shopping" >
        </activity>
       <activity
            android:name="nl.futureworks.shopofthefuture.activity.ShoppingListBrowserActivity"
            android:label="@string/title_activity_shopping_list_browser" >
        </activity>
        <activity
            android:name="nl.futureworks.shopofthefuture.activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>

    </application>

</manifest>